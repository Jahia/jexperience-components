<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <osgi:reference id="contextServerService"
                    interface="org.jahia.modules.jexperience.admin.ContextServerService"
                    availability="mandatory"/>

    <bean id="jExperiencePropertiesInitializer" class="org.jahia.modules.initializers.PropertiesInitializer">
        <property name="key" value="jExperiencePropertiesInitializer"/>
        <property name="contextServerService" ref="contextServerService"/>
    </bean>

    <bean id="updateProfile" class="org.jahia.modules.actions.UpdateProfile">
        <property name="name" value="updateProfile"/>
        <property name="requireAuthenticatedUser" value="false"/>
        <property name="contextServerService" ref="contextServerService"/>
        <property name="jcrTemplate" ref="jcrTemplate"/>
    </bean>

    <bean class="org.jahia.services.content.decorator.validation.JCRNodeValidatorDefinition">
        <property name="validators">
            <map>
                <entry key="wemnt:personalizedBannerItem"
                       value="org.jahia.modules.validators.ColorPropertyNodeValidator"/>
            </map>
        </property>
    </bean>

    <bean class="org.jahia.services.uicomponents.bean.editmode.EngineConfiguration">
        <property name="key" value="wemnt:carousel"/>
        <property name="engineTabs">
            <list>
                <ref bean="Engine.Tab.Content"/>
                <bean class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
                    <property name="id" value="dmfconditions"/>
                    <property name="titleKey" value="label.engineTab.dmfconditions@resources.jexperience"/>
                    <property name="tabItem">
                        <bean class="org.jahia.ajax.gwt.client.widget.contentengine.CustomEditEngineTabItem">
                            <property name="onInitMethodName" value="componentPersonalizationConditionsInit"/>
                            <property name="onLanguageChangeMethodName" value="componentPersonalizationConditionsLanguageChange"/>
                            <property name="doSaveMethodName" value="componentPersonalizationConditionsDoSave"/>
                            <property name="doValidateMethodName" value="componentPersonalizationConditionsDoValidate"/>
                            <property name="handleCreate" value="true"/>
                            <property name="handleMultipleSelection" value="false"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
        <property name="creationButtons">
            <list>
                <ref bean="Engine.Button.WorkInProgress"/>
                <ref bean="Engine.Button.Create"/>
                <ref bean="Engine.Button.CreateAndNew"/>
            </list>
        </property>
        <property name="editionButtons">
            <list>
                <ref bean="Engine.Button.WorkInProgress"/>
                <ref bean="Engine.Button.Update"/>
            </list>
        </property>
        <property name="commonButtons">
            <list>
                <ref bean="Engine.Button.Cancel"/>
            </list>
        </property>
        <property name="parent" ref="editmode"/>
    </bean>

    <bean class="org.jahia.services.uicomponents.bean.editmode.EngineConfiguration">
        <property name="key" value="wemnt:slider"/>
        <property name="engineTabs">
            <list>
                <ref bean="Engine.Tab.Content"/>
                <bean class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
                    <property name="id" value="dmfSliderConditions"/>
                    <property name="titleKey" value="label.engineTab.dmfconditions@resources.jexperience"/>
                    <property name="tabItem">
                        <bean class="org.jahia.ajax.gwt.client.widget.contentengine.CustomEditEngineTabItem">
                            <property name="onInitMethodName" value="componentPersonalizationConditionsInit"/>
                            <property name="onLanguageChangeMethodName" value="componentPersonalizationConditionsLanguageChange"/>
                            <property name="doSaveMethodName" value="componentPersonalizationConditionsDoSave"/>
                            <property name="doValidateMethodName" value="componentPersonalizationConditionsDoValidate"/>
                            <property name="handleCreate" value="true"/>
                            <property name="handleMultipleSelection" value="false"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
        <property name="creationButtons">
            <list>
                <ref bean="Engine.Button.WorkInProgress"/>
                <ref bean="Engine.Button.Create"/>
                <ref bean="Engine.Button.CreateAndNew"/>
            </list>
        </property>
        <property name="editionButtons">
            <list>
                <ref bean="Engine.Button.WorkInProgress"/>
                <ref bean="Engine.Button.Update"/>
            </list>
        </property>
        <property name="commonButtons">
            <list>
                <ref bean="Engine.Button.Cancel"/>
            </list>
        </property>
        <property name="parent" ref="editmode"/>
    </bean>

    <bean class="org.jahia.services.uicomponents.bean.editmode.EngineConfiguration">
        <property name="key" value="wemnt:list"/>
        <property name="engineTabs">
            <list>
                <ref bean="Engine.Tab.Content"/>
                <bean class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
                    <property name="id" value="dmfListConditions"/>
                    <property name="titleKey" value="label.engineTab.dmfconditions@resources.jexperience"/>
                    <property name="tabItem">
                        <bean class="org.jahia.ajax.gwt.client.widget.contentengine.CustomEditEngineTabItem">
                            <property name="onInitMethodName" value="componentPersonalizationConditionsInit"/>
                            <property name="onLanguageChangeMethodName" value="componentPersonalizationConditionsLanguageChange"/>
                            <property name="doSaveMethodName" value="componentPersonalizationConditionsDoSave"/>
                            <property name="doValidateMethodName" value="componentPersonalizationConditionsDoValidate"/>
                            <property name="handleCreate" value="true"/>
                            <property name="handleMultipleSelection" value="false"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
        <property name="creationButtons">
            <list>
                <ref bean="Engine.Button.WorkInProgress"/>
                <ref bean="Engine.Button.Create"/>
                <ref bean="Engine.Button.CreateAndNew"/>
            </list>
        </property>
        <property name="editionButtons">
            <list>
                <ref bean="Engine.Button.WorkInProgress"/>
                <ref bean="Engine.Button.Update"/>
            </list>
        </property>
        <property name="commonButtons">
            <list>
                <ref bean="Engine.Button.Cancel"/>
            </list>
        </property>
        <property name="parent" ref="editmode"/>
    </bean>

    <bean class="org.jahia.services.uicomponents.bean.editmode.EngineConfiguration">
        <property name="key" value="wemnt:personalizedBanner"/>
        <property name="engineTabs">
            <list>
                <ref bean="Engine.Tab.Content"/>
                <bean class="org.jahia.services.uicomponents.bean.editmode.EngineTab">
                    <property name="id" value="dmfBannerConditions"/>
                    <property name="titleKey" value="label.engineTab.dmfconditions@resources.jexperience"/>
                    <property name="tabItem">
                        <bean class="org.jahia.ajax.gwt.client.widget.contentengine.CustomEditEngineTabItem">
                            <property name="onInitMethodName" value="componentPersonalizationConditionsInit"/>
                            <property name="onLanguageChangeMethodName"
                                      value="componentPersonalizationConditionsLanguageChange"/>
                            <property name="doSaveMethodName" value="componentPersonalizationConditionsDoSave"/>
                            <property name="doValidateMethodName" value="componentPersonalizationConditionsDoValidate"/>
                            <property name="handleCreate" value="true"/>
                            <property name="handleMultipleSelection" value="false"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
        <property name="creationButtons">
            <list>
                <ref bean="Engine.Button.WorkInProgress"/>
                <ref bean="Engine.Button.Create"/>
                <ref bean="Engine.Button.CreateAndNew"/>
            </list>
        </property>
        <property name="editionButtons">
            <list>
                <ref bean="Engine.Button.WorkInProgress"/>
                <ref bean="Engine.Button.Update"/>
            </list>
        </property>
        <property name="commonButtons">
            <list>
                <ref bean="Engine.Button.Cancel"/>
            </list>
        </property>
        <property name="parent" ref="editmode"/>
    </bean>

    <bean class="org.jahia.ajax.gwt.helper.ModuleGWTResources">
        <property name="javascriptResources">
            <list>
                <value>/modules/jexperience-components/javascript/jexperience-components/wem-edit-cpmnt-personalization.js</value>
            </list>
        </property>
    </bean>
</beans>
