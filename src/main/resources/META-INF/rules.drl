package org.jahia.modules.marketingfactorycomponents.rules

// list any import classes here.
import org.jahia.services.content.rules.*
import org.jahia.services.content.JCRContentUtils
import org.slf4j.Logger

expander rules.dsl

// declare any global variables here
global User user
global Service service
global Logger logger
global JCRContentUtils jcrUtils

rule "Personalization/optimization - node created/copied/moved in wemnt:list"
    when
>       node : AddedNodeFact (types contains "jmix:droppableContent", $node : this)
>       AddedNodeFact (types contains "wemnt:list") from node.parent
    then
>       logger.debug("Adding wemmix:editItem type on node created/copied/moved in wemnt:list");
>       node.addType("wemmix:editItem", drools);
end
